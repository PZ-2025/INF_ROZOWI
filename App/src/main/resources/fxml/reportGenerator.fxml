<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" prefWidth="800" prefHeight="600"
      xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.rozowi.app.controllers.ReportGeneratorController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="Generator raportów" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <VBox fx:id="filterControls" spacing="10">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Typ raportu:" minWidth="100" />
            <ComboBox fx:id="reportTypeComboBox" prefWidth="300" />
        </HBox>

        <GridPane fx:id="formGrid" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="100" prefWidth="120" />
                <ColumnConstraints prefWidth="300" />
            </columnConstraints>

            <!-- Wiersz 0: Daty -->
            <Label text="Data początkowa:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <DatePicker fx:id="startDatePicker" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300" />

            <Label text="Data końcowa:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <DatePicker fx:id="endDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="300" />

            <!-- Wiersz 2: Projekt -->
            <Label text="Projekt:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <ComboBox fx:id="projectComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="300" />

            <!-- Wiersz 3: Użytkownik -->
            <Label text="Użytkownik:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <ComboBox fx:id="userComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="300" />

            <!-- Wiersz 4: Filtry -->
            <Label text="Status zadań:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <ComboBox fx:id="statusFilterComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="300" />

            <Label text="Priorytet zadań:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <ComboBox fx:id="priorityFilterComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="300" />
        </GridPane>
    </VBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="generateButton" text="Generuj raport"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="150" />
        <Button fx:id="downloadButton" text="Pobierz PDF"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;" prefWidth="150" />
        <Button fx:id="previewButton" text="Podgląd"
                style="-fx-background-color: #FFC107; -fx-text-fill: white;" prefWidth="150" />
    </HBox>

    <Separator />

    <Label text="Status operacji:" />
    <TextArea fx:id="resultTextArea" prefHeight="150" wrapText="true" editable="false" />

</VBox>