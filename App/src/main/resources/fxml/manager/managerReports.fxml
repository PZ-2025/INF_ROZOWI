<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Region?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.rozowi.app.controllers.ReportsController"
            style="-fx-background-color: #1E1E2F;">
    <HBox layoutX="20" layoutY="20" spacing="10">
        <Label text="Raporty (Kierownik)" style="-fx-font-size: 20px; -fx-text-fill: white;"/>
        <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
        <Button fx:id="generateButton" text="Generuj" style="-fx-background-color: #007BFF; -fx-text-fill: white;"/>
    </HBox>
    <TextArea fx:id="reportsArea" layoutX="20" layoutY="60"
              style="-fx-pref-width: 600; -fx-pref-height: 400;"
              promptText="Tu wstaw raporty..."/>
</AnchorPane>
