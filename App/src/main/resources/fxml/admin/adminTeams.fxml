<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.rozowi.app.controllers.AdminTeamsController"
            style="-fx-background-color: #1E1E2F;">

    <top>
        <VBox spacing="10" style="-fx-padding: 10">
            <HBox spacing="10">
                <Button text="Nowy zesp贸" onAction="#onAddTeam" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
                <Button text="Edytuj zesp贸" onAction="#onEditTeam" style="-fx-background-color: #ffc107; -fx-text-fill: black;"/>
                <Button text="Przypisz czonk贸w" onAction="#onAssignMembers" style="-fx-background-color: #007BFF; -fx-text-fill: white;"/>
                <Button text="Odwie偶" onAction="#handleRefresh" style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchField" promptText="Szukaj zespou..." style="-fx-pref-width: 200px;"/>
                <Button text="" onAction="#handleSearch" style="-fx-background-color: #007BFF; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>

    <left>
        <TableView fx:id="teamsTable" prefWidth="350">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colName" text="Nazwa zespou" prefWidth="150"/>
                <TableColumn fx:id="colProjectName" text="Projekt" prefWidth="120"/>
                <TableColumn fx:id="colMembersCount" text="Liczba czonk贸w" prefWidth="120"/>
            </columns>
        </TableView>
    </left>

    <center>
        <VBox spacing="10" style="-fx-padding:10">
            <Label text="Czonkowie zespou:" style="-fx-text-fill: white;"/>
            <TableView fx:id="membersTable" prefHeight="150">
                <columns>
                    <TableColumn fx:id="colMemberId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colMemberEmail" text="Email" prefWidth="250"/>
                    <TableColumn fx:id="colMemberRole" text="Rola" prefWidth="150"/>
                </columns>
            </TableView>

            <Label text="Zadania zespou:" style="-fx-text-fill: white;"/>
            <TableView fx:id="tasksTable" prefHeight="200">
                <columns>
                    <TableColumn fx:id="colTaskId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colTaskTitle" text="Tytu" prefWidth="200"/>
                    <TableColumn fx:id="colTaskStatus" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="colTaskPriority" text="Priorytet" prefWidth="100"/>
                    <TableColumn fx:id="colTaskAssignee" text="Wykonawca" prefWidth="180"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>