<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="15"
      style="-fx-padding: 20px; -fx-background-color: #1E1E2F;">

    <Label text="Zadania" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
    <TableView fx:id="tasksTable" style="-fx-pref-width: 80%; -fx-pref-height: 300px;">
        <columns>
            <TableColumn text="ID" fx:id="taskIdColumn"/>
            <TableColumn text="Nazwa" fx:id="taskNameColumn"/>
            <TableColumn text="Status" fx:id="taskStatusColumn"/>
        </columns>
    </TableView>
</VBox>
